    "Logging": {
        "Description": "Logging settings to determine how to handle logs",
        "Log Directory": {
            "Value": "{ ProgramData }\\{ Application Name }\\logs",
            "Description":"Directory where to store logs"
            },
        "Log File Name": {
            "Value": "{ Application Name }.log",
            "Description": "Name of the log file"
            },
        "Log Max Size MB": {
            "Value": 10,
            "Description": "Max size of the log file in MB"
            },
        "Log Max Files": {
            "Value": 10,
            "Description": "Max number of log files to keep"
            }
        },
    "User Experience": {
        "Description": "User Experience settings to determine how to App looks and functions.",
        "User State Gui Activation": {
            "Description": "User state for the gui to be activated. Active, Disconnected, Idle, Down,  Listen, Connect, Shadowing, Locked, Resetting  ",
            "States": [
                "Active",
                "Idle",
                "Listen",
                "Connect",
                "Shadowing"
                ],
            "Wait For User State": {
                "Description": "Wait for the user state to be in the list of values before showing the gui",
                "States": [
                    "Idle",
                    "Listen",
                    "Connect",
                    "Shadowing"
                    ],
                "Max Wait Time": 900,
                "Sleep Time": 60
                }
            },
        "Idle Time Limit": {
            "Value": 300,
            "Description": "Number of seconds to trigger gui, if idle time is greater than this value we will wait, if false then it will always show the gui",
            "Enabled": true
            },
        "Max Failed Update Count": {
            "Value": 2,
            "Description": "Max number of failed upgrade job attempts before we skip the application. This is used to prevent the application from failing forever and causing bad user expereience"
            },
        "Max Update Job Runtime": {
            "Value": 600,
            "Description": "Max number of seconds to run the job before we kill it. This is used to prevent the job from running forever and causing issues with the gui"
            },
        "Max Defferal Days": {
            "Value": 3,
            "Description": "Max number of days to defer the update"
            },
        "Max Defferal Amount": {
            "Value": 3,
            "Description": "Max number of times to click the defer button"
            },
        "Count Down Seconds Force Update": {
            "Value": 20,
            "Description": "Number of seconds to before we force an update on applications. This happens when the user is out of defferals"
            },
        "Window Countdown Timer": {
            "Value": 3,
            "Description": "Number of minutes to before main window closes"
            },
        "Notifications": {
            "Toast Notifications": {
                "Enabled": true,
                "Description": "Show Toast notifications to the user, This is overriden by Notification Center if enabled"
                },
            "Notification Center": {
                "Description": "Show Notifications in the Notification Center, This is overriden by Toast Notifications",
                "Enabled": true,
                "Module": "Microsoft.PowerShell.BurntToast",
                "Bypass Do Not Disturb": true,
                "Notification Arguments": {
                    },
                "Notification Registry Data": {
                    "App Id": "Windows.Defender.SecurityCenter",
                    "Description": "AppId to use for the notification center grouping, This is used to to create the start menu shortcut for the notification grouping and icon"
                    },
                "Dummy Exe": {
                    "Create": true,
                    "Path": "{ ProgramData }\\{ Application Name }\\{ Application Name }",
                    "Description": "Path to the dummy exe to use for the notification center, This is used to get the icon for the notification center which rewquires and EXE"
